@model MVC.Models.VendedorDetalle

@{
    ViewBag.Title = "Datos Vendedor";
}

<h2>Detalle Vendedor</h2>

<div class="form-body">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => Model.Codigo)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido)
            @Html.EditorFor(model => model.Apellido)
            @Html.ValidationMessageFor(model => model.Apellido)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Numero_Identificacion)
            @Html.EditorFor(model => model.Numero_Identificacion)
            @Html.ValidationMessageFor(model => model.Numero_Identificacion)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion)
            @Html.DropDownListFor(model => model.Descripcion, (IEnumerable<SelectListItem>)ViewBag.Opciones)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <div class="form-group">
            <input type="submit" name="name" value="Registro" class="btn button" />
            <input type="reset" name="name" value="Limpiar" class="btn button" />
        </div>
    }
</div>

@section  scripts{
    @Scripts.Render("~/bundles/jqueryval");
}

